<!DOCTYPE html>
<html lang="es-es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/Icono/icono.png" />
    <title>@ViewData["ReproductorMultimedia"] - Reproductor Multimedia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReproductorMultimedia.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/personalizacion.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow" style="position: relative; z-index: 2;">
            <div class="container-fluid">
                <img src="~/Icono/icono.png" style="height: 30px; width: 30px;" class="mr-2"> <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Reproductor Multimedia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacto">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-auto shadow-sm" style="position: relative; z-index: 2;">
        <div class="container text-center">
            <p class="mb-2">
                &copy; 2025 <strong>Reproductor Multimedia</strong> &mdash; Todos los derechos reservados
            </p>
            <p>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none me-3">
                    <i class="fas fa-shield-alt"></i> Privacidad
                </a>
                <a href="mailto:soporte@reproductor.com" class="text-light text-decoration-none">
                    <i class="fas fa-envelope"></i> Contacto
                </a>             
               
            </p>
        </div>
    </footer>

    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @{
        var nombreUsuario = HttpContextAccessor.HttpContext.Session.GetString("NombreUsuario");
    }

    @if (!string.IsNullOrEmpty(nombreUsuario))
    {
        <span>Bienvenido, @nombreUsuario</span>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
