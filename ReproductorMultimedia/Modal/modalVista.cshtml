@if (Model.Modal != null)
{
    <div class="modal fade show" style="display:block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content border-@Model.Modal.Tipo">
                <div class="modal-header">
                    <h5 class="modal-title">@Model.Modal.Titulo</h5>
                </div>
                <div class="modal-body">
                    <p>@Model.Modal.Mensaje</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">@Model.Modal.BotonTexto</button>
                    @if (Model.Modal.MostrarCancelar)
                    {
                        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    }
                </div>
            </div>
        </div>
    </div>
}
