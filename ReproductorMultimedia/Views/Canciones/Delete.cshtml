@model Logica.ViewModels.CancionesViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Canciones</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artista)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artista)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Album)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Album)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duracion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>      
      
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idCancion" />
        <button type="button" class="btn btn-danger" onclick="mostrarModalEliminar()">
            Delete
        </button>

        <a asp-action="Index">Back to List</a>
    </form>
    @await Html.PartialAsync("Modal/modalVista")

</div>
<script>
    function mostrarModalEliminar() {
        mostrarModalConfirmacion(
            "Confirmar eliminación de canción",
            "¿Estás seguro de que deseas eliminar esta canción?",
            "Sí",
            function () {
                document.forms[0].submit();
            }
        );
    }
    function mostrarModalConfirmacion(titulo, mensaje, textoBoton, accionCallback) {
        $('#tituloModal').text(titulo);
        $('#mensajeModal').text(mensaje);
        $('#btnConfirmarModal').text(textoBoton);
        $('#btnConfirmarModal').off('click');
        $('#btnConfirmarModal').on('click', function () {
            $('#modalConfirmacion').modal('hide');
            accionCallback();
        });
        $('#modalConfirmacion').modal('show');
    }
</script>
