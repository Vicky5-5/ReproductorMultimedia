@model Logica.ViewModels.CancionesViewModel

@{
    ViewData["Title"] = "AgregarCancion";
}

<h1>AgregarCancion</h1>

<h4>Canciones</h4>
<hr />
<div class="card">
    @using (Html.BeginForm("AgregarCancion","Canciones", FormMethod.Post, new {enctype = "multipart/form-data"})){
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
<h4>Canción</h4> 
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) <!--Se comprueba si lo insertado es válido-->
