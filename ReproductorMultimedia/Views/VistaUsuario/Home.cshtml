            margin-right: 8px;
            transition: transform 0.4s ease;
        }

        .btn-favoritas:hover {
            background-color: #c73636; /* tono más oscuro */
            transform: scale(1.05);
            box-shadow: 0 6px 14px rgba(0,0,0,0.3);
            text-decoration: none;
            color: white;
        }

            .btn-favoritas:hover i {
                transform: rotate(15deg);
            }
    /*Estilos de la barra de búsqueda*/
    .lupa {
        background: none;
        border: none;
        cursor: pointer;
        color: #333;
        font-size: 18px;
        transition: color 0.3s ease;
    }

    .busqueda-container {
        max-width: 400px;
        margin-bottom: 20px;
    }

    .input-con-lupa {
        display: flex;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        overflow: hidden;
        background-color: white;
    }

        .input-con-lupa input {
            flex: 1;
            padding: 10px 12px;
            border: none;
            outline: none;
            font-size: 16px;
        }

        .input-con-lupa .separador {
            width: 1px;
            height: 60%;
            background-color: #ccc;
            margin: 0 10px;
        }

        .input-con-lupa .lupa {
            background: none;
            border: none;
            padding: 10px;
            cursor: pointer;
            font-size: 18px;
            color: #333;
        }

            .input-con-lupa .lupa:hover {
                color: #007bff;
            }
</style>
