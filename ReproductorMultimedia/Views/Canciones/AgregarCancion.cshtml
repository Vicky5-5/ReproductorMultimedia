                        <h6><strong>Artista</strong></h6>
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Artista, "{0:0.00}", new { htmlAttributes = new { style = "width:8vw", @class = "form-control", placeholder = "Precio" } })
                            @Html.ValidationMessageFor(model => model.Artista, "", new { @class = "text-danger" }) <!--Gracias al jqueryFixes va los decimales-->


