@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid p-0">
    <div class="row g-0">
        <div class="col-12 p-0">
            <div id="carrusel" class="carousel slide" data-bs-ride="carousel" style="width:auto;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/ImagenesCarrusel/pop.jpg" class="d-block w-100 h-100" alt="Primera imagen" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Pop</h2>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/ImagenesCarrusel/metal-covers-header.png" class="d-block w-100 h-100" alt="Segunda imagen" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Rock</h2>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/ImagenesCarrusel/electronic.jpg" class="d-block w-100 h-100" alt="Tercera imagen" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Electrónica</h2>
                        </div>
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselEjemplo" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="sr-only">Anterior</span>
                </a>
                <a class="carousel-control-next" href="#carouselEjemplo" role="button" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="sr-only">Siguiente</span>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow-x: hidden;
    }

    .container-fluid {
        padding: 0 !important;
    }

    .fullscreen-carousel {
        height: 100vh;
    }

    .carousel-inner,
    .carousel-item,
    .carousel-item img {
        height: 100%;
    }

        .carousel-item img {
            object-fit: cover;
        }

    .carousel-caption {
        bottom: 20%;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
        color: white;
        font-weight: 700;
        text-align: center;
    }

        .carousel-caption h2 {
            font-size: 3rem;
            margin: 0;
        }
</style>
