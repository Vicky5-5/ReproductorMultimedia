@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid p-0">
    <div class="row g-0">
        <div class="col-12 p-0">
            <div id="carrusel" class="carousel slide fullscreen-carousel carousel-shadow" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/ImagenesCarrusel/pop.jpg" class="d-block w-100 h-100" alt="Pop" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Pop</h2>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/ImagenesCarrusel/metal-covers-header.png" class="d-block w-100 h-100" alt="Rock" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Rock</h2>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/ImagenesCarrusel/electronic.jpg" class="d-block w-100 h-100" alt="Electrónica" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Electrónica</h2>
                        </div>
                    </div>
                </div>

                <!-- Indicadores -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carrusel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Pop"></button>
                    <button type="button" data-bs-target="#carrusel" data-bs-slide-to="1" aria-label="Rock"></button>
                    <button type="button" data-bs-target="#carrusel" data-bs-slide-to="2" aria-label="Electrónica"></button>
                </div>

                <!-- Controles -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carrusel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carrusel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        </div>
    </div>
</div>


<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow-x: hidden;
    }

    .carousel-shadow {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        overflow: hidden; 
    }

    .container-fluid {
        padding: 0 !important;
    }

    .fullscreen-carousel {
        height: 100vh;
    }

    .carousel-inner,
    .carousel-item,
    .carousel-item img {
        height: 100%;
    }

        .carousel-item img {
            object-fit: cover;
        }

    .carousel-caption {
        bottom: 20%;
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
        color: white;
        font-weight: 700;
        text-align: center;
    }

        .carousel-caption h2 {
            font-size: 3rem;
            margin: 0;
        }
</style>
