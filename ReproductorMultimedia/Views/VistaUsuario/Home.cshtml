@using Logica.Managers
@model IEnumerable<Logica.ViewModels.CancionesViewModel>

@{
    ViewData["Title"] = "ListaCanciones";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<!--He añadido una nueva libreria llamada MediaElement.js para la personalización de la barra de reproducción y un mejor manejo-->
<!-- CSS de MediaElement.js -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mediaelement/4.2.16/mediaelementplayer.min.css">

<!--JS de MediaElement.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/mediaelement/4.2.16/mediaelement-and-player.min.js"></script>

<h1>Usuario: @ViewBag.NombreUsuario</h1>

<h1>Listado de Canciones</h1>

<a href="@Url.Action("FavoritasUsuario", "VistaUsuario")" class="btn-favoritas mb-4">
    <i class="fa-solid fa-heart"></i> Ver favoritas
</a>
<!-- Para crear una barra de búsqueda. Esta barra solo busca el nombre de las canciones -->
<form id="formularioBusqueda" class="busqueda-container">
    <!-- Contenedor que incluye el input de búsqueda y el botón con la lupa -->
    <div class="input-con-lupa">
        <input type="text" id="barraBusqueda" placeholder="Introduce el nombre de la canción">
        <!-- Separador visual entre el input y la lupa -->
        <div class="separador"></div>
        <!-- Botón de búsqueda con icono de lupa -->
        <button type="submit" class="lupa">
            <i class="fas fa-search"></i>
        </button>
    </div>
</form>


<br />
<table class="table">
    <thead>
        <tr>
            <th>Carátula</th>
            <th>Reproducir</th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                <i class="fa-solid fa-clock"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                Reproducciones
            </th>
            <th>
                Likes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="disco" id="disco-@item.idCancion">
                        <img src="@item.RutaCaratulaAlbum" alt="Carátula" />
                    </div>
                </td>
                <td>
                    <!-- Cambiamos el estadar de Visual Studio por el de MediaElement.js -->
                    <audio id="audio-@item.idCancion" class="mejs-player" controls preload="none">
                        <!-- El preload="none" evita cargar el audio automáticamente hasta que el usuario interactúe con él -->
                        <source src="@item.RutaArchivo" type="audio/mp3" />
                    </audio>

                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artista)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duracion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td id="reproducciones-@item.idCancion">
                    @item.NumeroReproducciones
                </td>


                <td id="contadorLikes-@item.idCancion">
                    @item.NumeroLikes
                </td>

                <td>
                    <button class="like @(item.UsuarioDioLike ? "like-activo" : "")"
                            data-idcancion="@item.idCancion"
                            onclick="toggleLike(this)"
                            style="background: none; border: none;">
                        <i class="fa-solid fa-heart"></i>
                    </button>


                </td>

            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("DarseBaja", "VistaUsuario")" class="btn btn-outline-danger">
    <i class="fa-solid fa-user-slash"></i> Darse de baja
</a>

<!-- #region Estilos -->

<style>
    .table {
        background-color: #f8f9fa;
        border-radius: 8px;
    }

    .icono {
        margin: 0 10px;
        font-size: 22px;
        text-decoration: none;
        transition: transform 0.2s ease;
        display: inline-block;
    }

        .icono:hover {
            transform: scale(1.2);
        }

    .like {
        margin: 0 10px;
        font-size: 22px;
        text-decoration: none;
        transition: transform 0.2s ease;
        display: inline-block;
        color: grey;
    }

        .like:hover {
            transform: scale(1.2);
            color: #C73636;
        }

    .like-activo i {
        color: #C73636;
    }

    .disco {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: radial-gradient(circle, #333 30%, #111 70%);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 10px rgba(0,0,0,0.4);
        position: relative;
    }

        .disco img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            z-index: 1;
        }
    <!-- Aquí se personaliza la barra de audio-- >
    .mejs__container {
        background-color: #171717;
        border: 1px solid #ddd;
        border-radius: 6px;
    }

    .mejs__time-current {
        background: #C73636 !important;
    }

    .mejs__time-loaded {
        background: #bbb;
    }

    .mejs__button > button {
        color: #C73636;
    }

    .btn-favoritas {
        display: inline-block;
        background-color: #ff4b5c;
        color: white;
        border: none;
        border-radius: 30px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        box-shadow: 0 4px 10px rgba(199, 54, 54, 0.3);
    }

